                                                                                                                  "Plectusexternal", "Plectusclean",  "Tardigradeexternal","Tardigradeclean"))
#allGroupsColors <- c( "#E94032","#f49f98", "#414c7d", "#c0ccfc",  "#AC3DB4" ,"#d59ed9")



allGroupsColors <- c("#97d700",  "#FF0000","#FFBB00", "#4800FF", "#00FDFF",  "#74007D" ,"#E500FF")
